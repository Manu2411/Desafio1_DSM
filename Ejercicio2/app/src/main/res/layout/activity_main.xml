<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="352dp"
        android:layout_height="21dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="62dp"
        android:text="Ingrese los votos recolectados:"
        app:layout_constraintBottom_toTopOf="@+id/Edvotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnContar"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="120dp"
        android:insetRight="0dp"
        android:text="CONTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="242dp"
        android:layout_height="28dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="25dp"
        android:text="SISTEMA DE CONTEO DE VOTOS"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="136dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="75dp"
        android:text='En esta aplicación se hace el calculo de votos que cada candidato obtuvo en las elecciones. Se tenían 4 candidatos distintos por los cuáles se votaba elegiendo el número que los representaba del 1 al 4. Exactamente no se sabe cuántas personas votaron y esta aplicación nos ayudará a solventar esa problemática.                                                                            La forma de ingresar los votos es la siguiente: "1-3-2-4".'
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Edvotos"
        android:layout_width="276dp"
        android:layout_height="47dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnContar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



